{
  "name": "notes-server",
  "version": "0.1.0",
  "description": "REST API Backend for notes-web ",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:ui": "rm -rf build && cd ../notes-web && npm run build --prod && cp -r build ../notes-server/",
    "deploy": "git push -u heroku main",
    "deploy:full": "npm run build:ui && git add . && git commit -m uibuild && npm run deploy",
    "logs:prod": "heroku logs --tail",
    "start": "node index.js",
    "dev": "nodemon index.js"
  },
  "author": "Carlos Azaustre <cazaustre@gmail.com> (https://carlosazaustre.es/)",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^9.0.0",
    "express": "^4.17.1",
    "mongoose": "^5.12.7"
  },
  "devDependencies": {
    "nodemon": "^2.0.7"
  }
}
